<div class="container">
  <table class="table  table-bordered">
      <thead >
        <tr>
          <th>User name</th>
          <th>User type</th>
          <th>Email Address</th>
          <th>Time created</th>
          <th>View</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
      {{#each result}}
       <tr>
        <td> {{this.name}} </td>
        <td> {{this.role}}</td>
        <td>{{this.email}}</td>
        <td> {{this.creation}} </td>
        <td> <a  href="/award"> <span class="glyphicon glyphicon-eye-open" href="/award"></span></a></td>
        <td> <a  href="/edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
        <td> <a id = {{this.id}}><span class="glyphicon glyphicon-trash"></span></a></td>
      </tr>
      {{/each}}
      </tbody>
    </table>
</div>





